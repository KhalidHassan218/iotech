{
  "collectionName": "components_herobanner_slides",
  "info": {
    "displayName": "Slide"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "backgroundType": {
      "type": "enumeration",
      "required": false,
      "default": "image",
      "enum": [
        "image",
        "video"
      ]
    },
    "backgroundImage": {
      "type": "media",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "backgroundType"
            },
            "image"
          ]
        }
      },
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "backgroundVideo": {
      "type": "media",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "backgroundType"
            },
            "video"
          ]
        }
      },
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "foregroundImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "buttonText": {
      "type": "string"
    },
    "buttonLink": {
      "type": "string"
    }
  },
  "config": {}
}
